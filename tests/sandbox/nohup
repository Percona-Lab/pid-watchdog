#!/bin/sh

APP=nohup
CMD=$1

SANDBOX_DIR="$( dirname "${BASH_SOURCE[0]}" )"

case $CMD in
    start)
        nohup sleep 120 &
        echo $! > /tmp/${APP}.pid
        ;;
    stop)
        kill -1 $(cat /tmp/${APP}.pid)
        ;;
    status)
        kill -0 $(cat /tmp/${APP}.pid) 2>/dev/null && echo running || echo stopped
        ;;
esac
